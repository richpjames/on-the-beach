{
  "name": "on-the-beach",
  "version": "1.0.0",
  "license": "PolyForm-Noncommercial-1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch server/index.ts",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "bun test tests/unit",
    "test:unit": "bun test tests/unit",
    "test:unit:watch": "bun test --watch tests/unit",
    "test:e2e": "playwright test playwright/add-link.spec.ts playwright/bandcamp-link.spec.ts playwright/stacks.spec.ts",
    "test:e2e:full": "bunx playwright test playwright",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun server/db/seed.ts",
    "lint": "oxlint",
    "format": "oxfmt --write",
    "format:check": "oxfmt --check",
    "devcontainer": "devcontainer up --workspace-folder .",
    "devcontainer:ssh": "docker compose -f .devcontainer/docker-compose.yml exec app bash",
    "prepare": "husky"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.10"
  },
  "devDependencies": {
    "@hono/node-server": "^1.19.9",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "better-sqlite3": "^12.6.2",
    "drizzle-kit": "^0.31.9",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.34.0",
    "oxlint": "^1.49.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "oxlint",
      "oxfmt --write --no-error-on-unmatched-pattern"
    ]
  }
}
