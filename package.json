{
  "name": "on-the-beach",
  "version": "1.0.31",
  "license": "PolyForm-Noncommercial-1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch server/index.ts",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "bun test tests/unit",
    "test:unit": "bun test tests/unit",
    "test:unit:watch": "bun test --watch tests/unit",
    "test:e2e": "playwright test playwright/add-link.spec.ts playwright/bandcamp-link.spec.ts playwright/stacks.spec.ts playwright/scan-cover.spec.ts playwright/version.spec.ts playwright/rating.spec.ts",
    "test:e2e:full": "bunx playwright test playwright",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun server/db/seed.ts",
    "lint": "oxlint",
    "format": "oxfmt --write",
    "format:check": "oxfmt --check",
    "devcontainer": "devcontainer up --workspace-folder .",
    "devcontainer:ssh": "container_id=$(bun run devcontainer | sed -n 's/.*\"containerId\":\"\\([^\"]*\\)\".*/\\1/p' | tail -n1) && [ -n \"$container_id\" ] && docker exec -it \"$container_id\" bash",
    "eval:submit": "bun eval/submit.ts",
    "eval:status": "bun eval/status.ts",
    "eval:results": "bun eval/results.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@mistralai/mistralai": "^1.14.0",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.10",
    "mailparser": "^3.9.3",
    "smtp-server": "^3.18.1"
  },
  "devDependencies": {
    "@hono/node-server": "^1.19.9",
    "@playwright/test": "^1.58.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^25.2.3",
    "@types/smtp-server": "^3.5.12",
    "better-sqlite3": "^12.6.2",
    "bun-types": "^1.3.9",
    "drizzle-kit": "^0.31.9",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.34.0",
    "oxlint": "^1.49.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "bun --bun x oxlint",
      "bun --bun x oxfmt --write --no-error-on-unmatched-pattern"
    ]
  }
}
